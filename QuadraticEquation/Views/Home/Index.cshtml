<!DOCTYPE html>
<html>
<head>
    <title>Page Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <div class=" row">
        <div class="col">
            <form>
                <div class="mb-3">
                    <label for="Date" class="form-label">Số a</label>
                    <input type="text" class="form-control" id="a" name="date">
                </div>
                <div class="mb-3">
                    <label for="Month" class="form-label">Số b</label>
                    <input type="text" class="form-control" id="b" name="month">
                </div>
                <div class="mb-3">
                    <label for="Year" class="form-label">Số c</label>
                    <input type="text" class="form-control" id="c" name="year">
                </div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" id="btnGet">
                    Tính
                </button>
                @*<button type="submit" class="btn btn-primary" id="btnGet">
                    Check
                </button>*@
            </form>
        </div>
        <div class="col"></div>
        <div id="result" class="mt-5 ms-5">
            @ViewData["result"]
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $("#btnGet").click(function () {
                $.ajax({
                    type: "POST",
                    url: "/Home/AjaxMethod",
                    data: {
                        "a": $("#a").val(),
                        "b": $("#b").val(),
                        "c": $("#c").val(),
                    },
                    success: function (response) {
                        document.getElementById("result").innerHTML
                            = response;
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            });
        });
    </script>
</body>
</html>
